<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prikazPojedinacneKomponente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/prikazPojedinacneKomponenteSlika"
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naziv komponente: "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/prikazPojedinacneKomponenteNaziv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cena komponente: "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/prikazPojedinacneKomponenteCena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dostupnost: "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/prikazPojedinacneKomponenteKolicina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opis komponente: "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/prikazPojedinacneKomponenteSadrzaj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFFFFF" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/dugmeKupiKomponentu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="35dp"
        android:background="#B560A5CC"
        android:fadingEdge="horizontal|vertical"
        android:text="Kupi"
        android:textColor="#FFFFFF" />

</LinearLayout>
